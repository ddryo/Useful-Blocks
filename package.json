{
    "name": "loos-pack",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "postinstall": "npm run build",
        "wp-start": "wp-env start && open http://localhost:5555",
        "wp-stop": "wp-env run cli wp db export sql/local.sql && wp-env stop",
        "wp-import": "wp-env run cli wp db import sql/local.sql",
        "build:css": "npx gulp compileScss",
        "build:js": "npx webpack --config webpack.config.scripts.js",
        "build:blocks": "wp-scripts build",
        "build": "npm run build:blocks && npm run build:js && npm run build:css",
        "watchs:css": "nodemon --watch src -e scss -x \"npm run build:css\"",
        "watch:js": "nodemon --watch src/js -e js -x \"npm run build:js\"",
        "watch:blocks": "nodemon --watch src/blocks -e js -x \"npm run build:blocks\"",
        "watch:lang": "nodemon --watch languages -e po -x \"npm run po2json\"",
        "watch": "npx npm-run-all --parallel watchs:css watch:js watch:blocks watch:lang",
        "po2json": "po2json languages/useful-blocks-ja.po languages/useful-blocks-ja-ponhiro-blocks-script.json -f jed"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@wordpress/icons": "^2.0.0",
        "@wordpress/scripts": "^12.1.1",
        "classnames": "^2.2.6",
        "glob": "^7.1.6",
        "gulp": "^4.0.2",
        "gulp-autoprefixer": "^7.0.1",
        "gulp-clean-css": "^4.3.0",
        "gulp-group-css-media-queries": "^1.2.2",
        "gulp-notify": "^3.2.0",
        "gulp-plumber": "^1.2.1",
        "gulp-sass": "^4.1.0",
        "gulp-sass-glob": "^1.1.0",
        "node-sass": "^4.14.1",
        "nodemon": "^2.0.4",
        "npm-run-all": "^4.1.5",
        "po2json": "^1.0.0-beta-2",
        "prettier": "^2.1.2",
        "stylelint-config-rational-order": "^0.1.2"
    },
    "dependencies": {}
}